<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="stoprepeatingyourself.Controller" spacing="10" alignment="CENTER">

    <padding>
        <Insets topRightBottomLeft="10"/>
    </padding>


    <Label text="Enter some text:" alignment="CENTER_LEFT"/>
    <TextArea fx:id="textArea" prefHeight="300"/>

    <CheckBox fx:id="ignoreCommonWords" text="ignore common words?"/>

    <BarChart fx:id="barChart" prefHeight="200" prefWidth="450" barGap="0" categoryGap="0">
        <yAxis>
            <NumberAxis side="LEFT" autoRanging="true"/>
        </yAxis>
        <xAxis>
            <CategoryAxis side="BOTTOM"/>
        </xAxis>
    </BarChart>

    <ListView fx:id="listView"/>

    <HBox alignment="CENTER" spacing="10">
        <Button text="Calculate" onAction="#calculate" prefWidth="100"/>
        <Button text="Back" onAction="#back" prefWidth="100"/>
    </HBox>

</VBox>
